{
  "presets": [
    "react",
    "es2015",
    "stage-1"
  ],

  "plugins": [
    [
      "module-alias",
      [
        { "src": "./src",  "expose": "src"  },
      ]
    ],
    "transform-react-display-name"
  ],

  "env": {
    "development": {
      "plugins": [
        "typecheck",
        ["react-transform", {
            "transforms": [{
                "transform": "react-transform-catch-errors",
                "imports": ["react", "redbox-react"]
              }
            ]
        }]
      ]
    }
  }
}
