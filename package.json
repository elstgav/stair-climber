{
  "name":        "stair-climber",
  "version":     "0.0.1",
  "description": "Track your stair climbing at Avvo",
  "homepage":    "http://stair-climber.herokuapp.com/",
  "author":      "Gavin Elster <gavin.elster@me.com>",
  "license":     "MIT",
  "repository":  "git@github.com:elstgav/stair-climber.git",
  "bugs": {
    "url": "https://github.com/elstgav/stair-climber/issues"
  },

  "main": "app/index.jsx",

  "dependencies": {
    "babel":               "^6.3.26",
    "babel-core":          "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react":  "^6.3.13",

    "express":             "^4.13.4",
    "compression":         "^1.6.1",

    "if-env":              "^1.0.0",
    "node-sass":           "^3.4.2",

    "lodash":              "^4.3.0",
    "moment":              "^2.11.1",

    "react":               "^0.14.6",
    "react-dom":           "^0.14.6",

    "clean-webpack-plugin":        "^0.1.8",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin":         "^2.8.1",

    "webpack":             "^1.12.11",
    "babel-loader":        "^6.2.1",
    "css-loader":          "^0.23.1",
    "sass-loader":         "^3.1.2",
    "style-loader":        "^0.13.0"
  },

  "devDependencies": {
    "eslint":               "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "eslint-plugin-react":  "^3.15.0",
    "babel-eslint":         "^4.1.6",

    "webpack-dev-server":   "^1.14.1",
    "react-hot-loader":     "^1.3.0"
  },

  "scripts": {
    "build":       "webpack --progress --colors",
    "lint":        "eslint .",
    "start":       "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev":   "webpack-dev-server --config ./webpack.config.dev.js --hot --progress --colors --content-base public/",
    "start:prod":  "npm run build && node server.js"
  },

  "private": true
}
