{
  "name":        "stair-climber",
  "version":     "0.0.1",
  "description": "Track your stair climbing at Avvo",
  "homepage":    "http://stair-climber.herokuapp.com/",
  "author":      "Gavin Elster <gavin.elster@me.com>",
  "license":     "MIT",
  "repository":  "git@github.com:elstgav/stair-climber.git",
  "bugs": {
    "url": "https://github.com/elstgav/stair-climber/issues"
  },

  "scripts": {
    "start":       "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev":   "NODE_ENV=development node index.js",
    "start:prod":  "NODE_ENV=production  npm run build && node index.js",

    "build":       "NODE_ENV=production webpack --config webpack.config.prod.js",

    "lint":        "eslint ."
  },

  "dependencies": {
    "babel":                       "^6.3.26",
    "babel-core":                  "^6.4.5",
    "babel-polyfill":              "^6.3.14",
    "babel-preset-es2015":         "^6.3.13",
    "babel-preset-react":          "^6.3.13",

    "express":                     "^4.13.4",
    "compression":                 "^1.6.1",
    "body-parser":                 "^1.14.2",

    "if-env":                      "^1.0.0",
    "node-sass":                   "^3.4.2",

    "lodash":                      "^4.3.0",
    "moment":                      "^2.11.1",

    "mongoose":                    "^4.3.7",

    "react":                       "^0.14.7",
    "react-dom":                   "^0.14.7",
    "react-router":                "^2.0.0-rc5",
    "react-redux":                 "^4.1.2",

    "redux":                       "^3.1.5",
    "redux-thunk":                 "^1.0.3",

    "webpack":                     "^1.12.11",
    "clean-webpack-plugin":        "^0.1.8",

    "babel-loader":                "^6.2.1",
    "css-loader":                  "^0.23.1",
    "sass-loader":                 "^3.1.2",
    "style-loader":                "^0.13.0"
  },

  "devDependencies": {
    "eslint":                      "^1.10.3",
    "eslint-config-airbnb":        "^3.1.0",
    "eslint-plugin-react":         "^3.15.0",
    "babel-eslint":                "^4.1.6",

    "babel-preset-react-hmre":     "^1.1.0",

    "redux-devtools":              "^3.1.1",
    "redux-devtools-dock-monitor": "^1.1.0",
    "redux-devtools-log-monitor":  "^1.0.4",

    "webpack-dev-server":          "^1.14.1",
    "webpack-dev-middleware":      "^1.5.1",
    "webpack-hot-middleware":      "^2.6.4",
    "react-hot-loader":            "^1.3.0"
  },

  "private": true
}
